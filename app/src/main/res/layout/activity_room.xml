<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".RoomActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bedroom"
        android:textSize="32sp"
        android:id="@+id/bedroom_Textview"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live Feed"
        app:layout_constraintTop_toBottomOf="@id/bedroom_Textview"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="15dp"
        android:id="@+id/live_feed"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bedroom_cctv"
        app:layout_constraintHeight_percent="0.5"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bedroom_Textview"
        android:id="@+id/bedroom_cctv"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bedroom_cctv"
        android:text="Motion Sensor "
        android:drawableStart="@drawable/baseline_circle_24"
        android:id="@+id/motion_sensor"
        android:textSize="32dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/motion_sensor"
        android:text="Window Sensor"
        android:drawableStart="@drawable/baseline_circle_24"
        android:id="@+id/window_sensor"
        android:textSize="32dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/window_sensor"
        android:text="Door Sensor "
        android:drawableStart="@drawable/baseline_circle_24"
        android:id="@+id/door_sensor"
        android:textSize="32dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: 72F"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="32dp"
        android:id="@+id/temperature_room"
        app:layout_constraintLeft_toLeftOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>